{
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "sx.motive@gmail.com",
      "strict_min_version": "100.0"
    }
  },
  "name": "New Tab Motive",
  "description": "Minimalistic home screen for your FireFox browser.",
  "version": "0.1",
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "permissions": ["bookmarks", "topSites", "tabs", "sessions"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "chrome_settings_overrides": {
    "homepage": "index.html"
  }
}
